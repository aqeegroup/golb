{{template "header" .}}

    <div class="content">
      <div class="container-fluid">

        <div class="block-header">
          <h3>网站概要</h3>

          <!-- 数据统计 -->
          <div class="row">
            <div class="col-sm-3">
              <a href="{{URLFor "postManage"}}">
                <div class="count-board">
                  <p>文章</p>
                  <h3>{{.PostCount}}</h3>
                </div>
              </a>
            </div>
            <div class="col-sm-3">
              <a href="">
                <div class="count-board">
                  <p>评论</p>
